= fb_prompt_permission('publish_stream', "Allow Better Carbon to push to your news stream?" )
= image_tag('http://bettercarbon.com/images/fb-refine-header.png')

- facebook_form_for(:calculator_profile, CalculatorProfile.new, :url => '/bettercarbon/calculator/do_refine', :labelwidth => '250', :width => '500') do |f|
  - index = 0
  - @calculator_result.per_module_results.each do |module_name, module_values|
    = render :partial => 'refine_fields_for_module', :locals => {:module_name => module_name, :module_values => module_values, :index => index, :form => f}
    - index += 1
  = f.buttons "Calculate"

%div{:style => "font-size: 16px; text-align: center; margin: 10px 0 0 0;"}
  %p
    You can also complete a
    = link_to("more detailed profile", "/bettercarbon/calculator/calculate_full")
    to get a more accurate results.