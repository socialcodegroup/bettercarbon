= render(:partial => 'facebook/calculator/tab_bar')

%p{:style => 'font-size: 22px;padding: 10px 10px 0px 10px;'}= "Your carbon footprint is #{number_with_delimiter(number_with_precision(@calculator_result.total_footprint, :precision => 2))} tons of C0<sup>2</sup>/year"

#footprint-breakdown= render(:partial => 'facebook/calculator/breakdown', :locals => {:cr_for_breakdown => @calculator_result})


%br{:clear => 'all'}
%br{:clear => 'all'}

#placeholder{:style => "width:300px;height:150px"}

:javascript
  $(function () {
  	var data = [#{@calculator_result.per_module_results.collect{|k, v| "{label: '#{k.pretty_module_name}', data: #{v[:footprint]}}"}.join(',')}];

    $.plot($("#placeholder"), data, {
      series: {
        pie: { 
          show: true,
        }
      },
      legend: {
          show: true
      }
    });
  });

