%h2= "Your carbon footprint is #{number_with_delimiter(number_with_precision(@calculator_result.total_footprint, :precision => 2))} tons of C02/year"

%ul#tabs{:style => 'list-style:none;background-color:#cccccc;'}
  %li{:style => 'list-style:none;display:inline;padding: 5px 10px;'}= link_to('Friend Graph', '?view=fg')
  %li{:style => 'list-style:none;display:inline;padding: 5px 10px;'}= link_to('Bar Graph', '?view=bg')
  %li{:style => 'list-style:none;display:inline;padding: 5px 10px;'}= link_to('Footprint Breakdown', '?view=fb')

= render(:partial => 'hypertree')

#placeholder{:style => "width:600px;height:300px"}

:javascript
  $(function () {
      var vals = [#{@gvalues.enum_with_index.collect {|v,i|"[#{i}, #{v}]"}.join(',')}];
      var labels = [#{@gkeys.enum_with_index.collect {|v,i|"[#{i+0.5}, #{v}]"}.join(',')}];
      
      $.plot($("#placeholder"), [
          {
              data: vals,
              bars: { show: true },
              color: ["#31549F"]
          }
        ],
        {
          xaxis: {
      			ticks: labels
      		}
      	}
      );
  });