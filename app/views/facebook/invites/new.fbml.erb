<%= render(:partial => 'facebook/calculator/tab_bar') %>

<% content_for("invite_message") do %>
  Calculate your environmental impact and compare with friends.
	<%= fb_req_choice("Calculate", "calculator")%>
<% end %>
<% fb_request_form("Better Carbon","invite_message", "/bettercarbon/invites") do %>
  <%= fb_multi_friend_selector(
    "Invite your friends to calculate their footprint.") %>
  <br />
  <%= fb_request_form_submit %>
<% end %>
